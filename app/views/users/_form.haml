= form_for @user do |f|
  %p
    = f.label :email
    = f.text_field :email, :autofocus => true
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %p
    = f.label :submit
    = f.submit

- if @user.errors.any?
  %ol
    - @user.errors.full_messages.each do |msg|
      %li.errormsg= msg