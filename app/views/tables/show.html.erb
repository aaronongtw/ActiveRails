<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @table.name %>
</p>

<p>
  <strong>Database:</strong>
  <%=link_to @table.database_id, "/users/#{@current_user.id}/databases/#{@table.database_id}/"%>
</p>

<p>
  <strong>Number of fields:</strong>
  <%= @table.fieldnum %>
</p>


<%= link_to 'Edit', edit_user_database_table_path(@current_user.id, @table.database_id, @table.id) %> |
<%= link_to 'Back', user_database_table_path %>


<% if @table.fields.any? %>
<% @table.fields.each do |t|%>
<h5><%=link_to(t.name, user_database_table_field_path(@current_user.id, @table.database_id, @table.id, t.id))%>:<%=t.fieldtype%></h5>
<% end %>
<% end %>

